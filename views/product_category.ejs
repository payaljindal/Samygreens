<%- include ('_layouts/header') -%>
<br><br>
<div class="container">
<h1 style="text-align:center" ><%= products.length %> matches found for category '<%= category %>'</h1>
<br>
<hr>
<br>
<div class="row small-up-2 medium-up-3 large-up-2">
  
    <% products.forEach(function(product){ %> 
      <div class="column column-block" >
        <div class="card" style="width: 25rem;padding: 5px 5px;margin-left: 20px;">
          <a href="/products/details/<%= product._id %>">
            <img class="card-img-top" src="/product_images/<%= product._id %>_<%= product.image %>" alt="<%= product.name %>" width="200" height="200">
          </a>
            <div class="card-body">
              <h5 class="card-title" style="font-size: large;"><%= product.name %></h5>
              <!-- <p class="card-text" style="font-size: medium;">Category : <%= product.category %></p> -->
              
              <a href="/products/details/<%= product._id %>" class="btn btn-default btn-info" style="background-color: #4CAF50;font-size: 16px;text-align: center;">Get Details</a>
              <br>  <br>
              
                
             
                
                          
        </div>
      </div>
      <br>
    </div>

    <% }); %>
  </div></div>

  <%- include('_layouts/footer') -%>